{% extends 'base/public.twig' %}

{% set page_title = "Login"|trans %}

{% block content %}
<form action="{{ url_for('login') }}" method="POST">
    {% include 'include/csrf.twig' %}

    <label for="email">{{ "Email address"|trans }}</label>
    <div>
        <input type="email" class="form-control" id="email" name="email" placeholder="{{ "Enter email"|trans }}">
    </div>
    <label for="pswd">{{ "Password"|trans }}</label>
    <div>
        <input type="password" class="form-control" id="pswd" name="pswd" placeholder="{{ "Password"|trans }}">
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe">
        <label class="form-check-label" for="rememberMe">{{ "Remember me"|trans }}</label>
    </div>
    <button type="submit" class="btn btn-primary">{{ "Submit"|trans }}</button>
</form>
{% endblock %}