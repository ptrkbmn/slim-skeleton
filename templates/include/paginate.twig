{% if paginator and paginator.pagecount > 1 %}
	<nav aria-label="Page navigation">
		<ul class="pagination">
			{% if paginator.current > 1 %}
				<li class="page-item">
					<a class="page-link" href="{{ current_url(false) }}?page={{ paginator.current - 1 }}" aria-label="{{ 'Previous'|trans }}'">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
			{% endif %}

			{% for i in range(1, paginator.pagecount) %}
				<li class="page-item {{ i == paginator.current ? 'active' : '' }}">
					<a class="page-link" href="{{ current_url(false) }}?page={{ i }}">
						{{ i }}
					</a>
				</li>
			{% endfor %}

			{% if paginator.current < paginator.pagecount %}
				<li class="page-item">
					<a class="page-link" href="{{ current_url(false) }}?page={{ paginator.current + 1 }}" aria-label="{{ 'Next'|trans }}">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
