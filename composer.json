{
    "name": "ptrkbmn/slim-skeleton",
    "description": "A simple skeleton for Slim Framework 4 with Doctrine, Twig, Monolog and Debugbar.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "slim-framework",
        "skeleton",
        "doctrine",
        "twig",
        "monolog",
        "debugbar"
    ],
    "authors": [
        {
            "name": "Patrick Baumann",
            "email": "patrick@pbdev.de",
            "homepage": "https://pbdev.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "src/Controllers",
            "App\\Entities\\": "src/Entities",
            "App\\Helpers\\": "src/Helpers",
            "App\\Middlewares\\": "src/Middlewares",
            "App\\Renderers\\": "src/Renderers"
        }
    },
    "require": {
        "php": ">=7.1",
        "slim/slim": "^4.2",
        "slim/psr7": "^0.5.0",
        "slim/flash": "^0.4.0",
        "slim/twig-view": "^3.0@beta",
        "php-di/php-di": "^6.0",
        "monolog/monolog": "2.0.0-beta2",
        "doctrine/orm": "^2",
        "twig/extensions": "^1.5",
        "maximebf/debugbar": "^1.15"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public"
    }
}